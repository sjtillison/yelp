<div class="page-header">
  <h1>
    Descriptors
    <a href="/descriptors/new" class="btn btn-lg btn-success">New Descriptor</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "descriptors_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :restaurant_name_cont, "Restaurant name contains" %>
      <%= f.text_field :restaurant_name_cont, :class => "form-control", :placeholder => "Restaurant name contains" %>
    </div>

<div class="form-group">
      <%= f.label :tag_name_cont, "Tag name contains" %>
      <%= f.text_field :tag_name_cont, :class => "form-control", :placeholder => "Tag name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/descriptors" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#descriptors_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Tag</th>
        <th>Restaurant</th>
        <th>Actions</th>
      </tr>

      <% @descriptors.each do |descriptor| %>
      <tr>
        <td>
          <% if descriptor.tag.present? %>
            <a href="/tags/<%= descriptor.tag.id %>">
              <%= descriptor.tag.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if descriptor.restaurant.present? %>
            <a href="/restaurants/<%= descriptor.restaurant.id %>">
              <%= descriptor.restaurant.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/descriptors/<%= descriptor.id %>" class="btn btn-primary">Show</a>
          <a href="/descriptors/<%= descriptor.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_descriptor/<%= descriptor.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @descriptors, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
