<div class="page-header">
  <h3>Reply #<%= @reply.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Owner</dt>
      <dd><%= @reply.owner_id %></dd>

      <dt>Review</dt>
      <dd><%= @reply.review_id %></dd>

      <dt>Content</dt>
      <dd><%= @reply.content %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/replies" class="btn btn-primary">
        Back
      </a>
      <a href="/replies/<%= @reply.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_reply/<%= @reply.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
