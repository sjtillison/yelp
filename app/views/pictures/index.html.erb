<div class="page-header">
  <h1>
    Pictures
    <a href="/pictures/new" class="btn btn-lg btn-success">New Picture</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "pictures_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :caption_cont, "Caption contains" %>
    <%= f.text_field :caption_cont, :class => "form-control", :placeholder => "Caption contains" %>
  </div>

<div class="form-group">
    <%= f.label :image_url_cont, "Image url contains" %>
    <%= f.text_field :image_url_cont, :class => "form-control", :placeholder => "Image url contains" %>
  </div>

<div class="form-group">
    <%= f.label :comment_cont, "Comment contains" %>
    <%= f.text_field :comment_cont, :class => "form-control", :placeholder => "Comment contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/pictures" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#pictures_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Comment</th>
        <th>Review</th>
        <th>Image url</th>
        <th>Caption</th>
        <th>Actions</th>
      </tr>

      <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.comment %></td>
        <td>
          <% if picture.review.present? %>
            <a href="/reviews/<%= picture.review.id %>">
              <%= picture.review.restaurant_id %>
            </a>
          <% end %>
        </td>
        <td><%= picture.image_url %></td>
        <td><%= picture.caption %></td>
        <td>
          <a href="/pictures/<%= picture.id %>" class="btn btn-primary">Show</a>
          <a href="/pictures/<%= picture.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_picture/<%= picture.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @pictures, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
