<div class="page-header">
  <h3>Picture #<%= @picture.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Comment</dt>
      <dd><%= @picture.comment %></dd>

      <dt>Review</dt>
      <dd>
        <% if @picture.review.present? %>
          <a href="/reviews/<%= @picture.review_id %>">
            <%= @picture.review.restaurant_id %>
          </a>
        <% end %>
      </dd>

      <dt>Image url</dt>
      <dd><%= @picture.image_url %></dd>

      <dt>Caption</dt>
      <dd><%= @picture.caption %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/pictures" class="btn btn-primary">
        Back
      </a>
      <a href="/pictures/<%= @picture.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_picture/<%= @picture.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
